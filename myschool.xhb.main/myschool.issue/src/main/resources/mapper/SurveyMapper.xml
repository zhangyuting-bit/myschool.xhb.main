<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.SurveyMapper">
    <select id="getSurveyByGradeId" resultType="com.zb.entity.Survey">
        SELECT
            *
        FROM
            `survey`
        WHERE
            gradeId=#{gradeId}
        ORDER BY startTime DESC
    </select>

    <select id="getSurveyBySurveyId" resultType="com.zb.entity.Survey">
        SELECT
            *
        FROM
            `survey`
        WHERE
            surveyId=#{surveyId}
    </select>

    <insert id="addSurvey">
        INSERT INTO `survey`
            (`surveyId`,
             `teacherId`,
             `gradeId`,
             `title`,
             `another`,
             `startTime`,
             `status`,
             `count`)
        VALUES (#{surveyId},
                #{teacherId},
                #{gradeId},
                #{title},
                #{another},
                #{startTime},
                #{status},
                #{count});
    </insert>

    <update id="updateSurEndTimeOne">
        UPDATE `survey`
        SET
          `endTime` = #{endTime},
          `statu` = 0
        WHERE `surveyId` = #{surveyId};
    </update>

    <update id="updateSurEndTime">
        UPDATE `survey`
        SET
          `status` = 1
        WHERE `surveyId` = #{surveyId};
    </update>
</mapper>