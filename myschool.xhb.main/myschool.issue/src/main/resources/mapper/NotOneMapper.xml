<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.NotOneMapper">
    <select id="getUserByGradeId" resultType="com.zb.entity.User">
        SELECT
            *
        FROM
            `user`
        WHERE
            gradeId=#{gradeId}
    </select>

    <select id="getUserByUserId" resultType="com.zb.entity.User">
        SELECT
            *
        FROM
            `user`
        WHERE
            userId=#{userId}
    </select>

    <select id="getGradeByUserId" resultType="com.zb.entity.Grade">
        SELECT
            gradeId
        FROM
            `user`
        WHERE
            userId=#{userId}
    </select>
    <insert id="addOne">
        INSERT INTO `notone`
            (`oneId`,
            `typeId`,
             `functionId`,
             `userId`)
        VALUES (#{oneId},
                #{typeId},
                #{functionId},
                #{userId});
    </insert>

    <select id="getOneByUserId" resultType="com.zb.entity.NotOne">
        SELECT
            *
        FROM
            `notone`
        WHERE
            userId=#{userId}
        <if test="typeId != 0">AND typeId=#{typeId}</if>
        ORDER BY createTime DESC
    </select>

    <delete id="delNotOneByNotIdAndUserId">
        delete from `notone` where typeId=#{typeId} and functionId=#{functionId}
    </delete>

    <delete id="delNotOneByNotId">
        delete from `notone` where functionId=#{functionId} and userId=#{userId} and typeId=#{typeId}
    </delete>
</mapper>