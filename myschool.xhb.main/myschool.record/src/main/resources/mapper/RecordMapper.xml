<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zb.mapper.RecordMapper">

    <select id="listRecordsByCondition" resultType="com.zb.pojo.GrowthRecord" parameterType="com.zb.vo.RetrievalRecord">
        SELECT * FROM growth_record
        WHERE 1 = 1
        <if test="classId != '' and classId != null ">
            AND classId = #{classId}
        </if>
        <if test="userId != '' and userId != null ">
            AND userId = #{userId}
        </if>
        AND visible = #{visible}
        AND isDelete = 0
        ORDER BY createDate DESC
    </select>

    <insert id="addRecord">
        INSERT INTO growth_record
        (classId,
        userId,
        recordContent,
        visible,
        isDelete,
        createDate
        )
        VALUES
        (#{classId},
        #{userId},
        #{recordContent},
        #{visible},
        0,
        NOW()
        );
    </insert>

    <insert id="addRecordLables">
        INSERT INTO recordlablemessage
        (recordId,
        lableId
        )
        VALUES
        (#{recordId},
        #{lableId}
        );
    </insert>

    <select id="getMaxRecordId" resultType="java.lang.Integer">
        SELECT MAX(recordId) FROM growth_record
    </select>

    <update id="deleteRecord">
        UPDATE growth_record SET isDelete = 1 WHERE recordId = #{recordId}
    </update>

</mapper>